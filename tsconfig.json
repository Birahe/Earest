{
  "compilerOptions": {
    "incremental": true,
    "target": "es2016",
    "module": "ES2020",
    "baseUrl": "./src",
    "allowJs": true,
    "checkJs": true,
    "declaration": false,
    "outDir": "dist/",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  }
}
